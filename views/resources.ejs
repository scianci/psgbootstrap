<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1>This is the Resources Page</h1>
            <p>view handpicked resources for any stage of your SideGig</p>
            <p><a class="btn btn-primary btn-sm" href="/resources/new">Add New Resource</a></p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <!-- figure out how to standardize card size and fix vertical gutters -->
        <% resources.forEach(function(resource){ %>
        <div class="col ">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%= resource.image %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= resource.name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
            </div>
    </div>
        <% }); %> 
    </div>

    <p><a href="/">Back Home</a></p>

</div>

